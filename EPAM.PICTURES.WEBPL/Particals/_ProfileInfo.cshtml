<div class="container-fluid d-flex flex-row">
    <img class="rounded-circle me-3"
         src="../@PageData["profileUser"].Image"
         alt=""
         width="150"
         height="150"
         class="d-inline-block align-text-top" />
    <div>
        <div class="d-flex align-items-center">
            <span class="navbar-brand fs-1">@PageData["profileUser"].Username</span>
            @if (PageData["authUser"] != null)
            {
                if (PageData["authUser"].Username == PageData["profileUser"].Username)
                {
                    <button class="btn p-0" data-bs-toggle="modal" data-bs-target="#updateProfileModal"><i data-feather="edit"></i></button>
                    @RenderPage("~/Particals/_UpdateProfileModal.cshtml")
                }

            }
        </div>

        <div class="d-flex justify-content-between">
            <div>
                <h5>Публикации: 28</h5>
            </div>
            <div>
                <h5>Подписки: 28</h5>
            </div>
            <div>
                <h5>Подписчики: 28</h5>
            </div>
        </div>
        <hr>
        <h4 class="p-0">@PageData["profileUser"].Name @PageData["profileUser"].Surname</h4>
        <p class="py-2">
            Lorem ipsum dolor sit amet consectetur adipisicing elit.
            Consequuntur harum quasi labore, recusandae officiis architecto
            dolor nobis, minus aliquid assumenda ipsam soluta necessitatibus
            vitae amet! Cupiditate quasi nostrum iusto aut?
        </p>

    </div>
